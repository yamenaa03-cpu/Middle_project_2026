<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane prefHeight="700.0" prefWidth="900.0" style="-fx-background-color: #ffffff;"
            xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="clientGUI.CancelReservationConfirmController">

    <top>
        <HBox alignment="CENTER_LEFT" spacing="8" style="-fx-padding: 18 28 10 28;">
            <Label style="-fx-font-size: 16px; -fx-text-fill: #6b7280;" text="â†" />
            <Label onMouseClicked="#onBackToMenu"
                   style="-fx-font-size: 14px; -fx-text-fill: #6b7280;"
                   text="Back to Menu" />
        </HBox>
    </top>

    <center>
        <VBox alignment="TOP_CENTER" spacing="18" style="-fx-padding: 0 0 30 0;">
            <Label style="-fx-font-size: 34px; -fx-font-weight: 800; -fx-text-fill: #111827;"
                   text="Cancel Reservation" />

            <VBox prefWidth="620" spacing="16"
                  style="-fx-background-color: #f8fafc; -fx-border-color: #e5e7eb; -fx-border-radius: 18; -fx-background-radius: 18;">
                <padding>
                    <Insets bottom="22" left="22" right="22" top="22" />
                </padding>

                <Label style="-fx-font-size: 15px; -fx-font-weight: 700; -fx-text-fill: #b91c1c;"
                       text="Confirm Cancellation" />

                <!-- TABLE (show ONLY when list size > 1) -->
                <VBox fx:id="tableBox" spacing="8" visible="false" managed="false">
                    <Label style="-fx-font-size: 13px; -fx-text-fill: #6b7280;"
                           text="Select which reservation you want to cancel:" />
                    <TableView fx:id="reservationTable" prefHeight="160">
                        <columns>
                            <TableColumn fx:id="colDateTime" prefWidth="220" text="Date/Time"/>
                            <TableColumn fx:id="colGuests" prefWidth="90" text="Guests"/>
                            <TableColumn fx:id="colStatus" prefWidth="140" text="Status"/>
                            <TableColumn fx:id="colCode" prefWidth="160" text="Confirmation"/>
                        </columns>
                    </TableView>
                </VBox>

                <!-- Details -->
                <VBox spacing="12" style="-fx-padding: 6 0 6 0;">
                    <HBox alignment="CENTER_LEFT" spacing="10">
                        <Label style="-fx-font-size: 16px; -fx-text-fill: #6b7280;" text="ðŸ“…" />
                        <Label fx:id="dateLabel" style="-fx-font-size: 15px; -fx-text-fill: #111827;" text="" />
                    </HBox>

                    <HBox alignment="CENTER_LEFT" spacing="10">
                        <Label style="-fx-font-size: 16px; -fx-text-fill: #6b7280;" text="ðŸ•’" />
                        <Label fx:id="timeLabel" style="-fx-font-size: 15px; -fx-text-fill: #111827;" text="" />
                    </HBox>

                    <HBox alignment="CENTER_LEFT" spacing="10">
                        <Label style="-fx-font-size: 16px; -fx-text-fill: #6b7280;" text="ðŸ‘¥" />
                        <Label fx:id="guestsLabel" style="-fx-font-size: 15px; -fx-text-fill: #111827;" text="" />
                    </HBox>
                </VBox>

                <Label style="-fx-font-size: 13px; -fx-text-fill: #6b7280;"
                       text="Are you sure you want to cancel this reservation? This action cannot be undone."
                       wrapText="true" />

                <HBox alignment="CENTER" spacing="18" style="-fx-padding: 8 0 0 0;">
                    <Button fx:id="goBackBtn" onAction="#onGoBack"
                            style="-fx-background-color: transparent; -fx-text-fill: #6b7280; -fx-font-weight: 700;"
                            text="Go Back" />

                    <Region HBox.hgrow="ALWAYS" />

                    <Button fx:id="cancelBtn" onAction="#onCancelReservation"
                            style="-fx-background-color: #c24141; -fx-text-fill: white; -fx-font-weight: 700;
                                   -fx-background-radius: 10; -fx-padding: 10 18 10 18;"
                            text="Cancel Reservation" />
                </HBox>

                <Label fx:id="statusLabel" style="-fx-font-size: 13px; -fx-text-fill: #b91c1c;" text="" />
            </VBox>
        </VBox>
    </center>

</BorderPane>
