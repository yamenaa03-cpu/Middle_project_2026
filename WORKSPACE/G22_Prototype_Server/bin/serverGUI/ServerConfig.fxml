<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns:fx="http://javafx.com/fxml/1"
            xmlns="http://javafx.com/javafx/21"
            stylesheets="@server.css"
            fx:controller="serverGUI.ServerFrameController">

    <top>
        <VBox spacing="15" alignment="CENTER">
            <Label text="Server Control Panel" styleClass="title-label"/>

            <GridPane hgap="10" vgap="10">
                <columnConstraints>
                    <ColumnConstraints halignment="RIGHT"/>
                    <ColumnConstraints halignment="LEFT"/>
                </columnConstraints>

                <children>
                    <!-- Row 0 -->
                    <Label text="Port:"/>
                    <TextField fx:id="portField" text="5555"/>

                    <!-- Row 1 -->
                    <Label text="DB Name:" GridPane.rowIndex="1"/>
                    <TextField fx:id="dbNameField" text="bistrodb" GridPane.rowIndex="1"/>

                    <!-- Row 2 -->
                    <Label text="DB User:" GridPane.rowIndex="2"/>
                    <TextField fx:id="dbUserField" text="root" GridPane.rowIndex="2"/>

                    <!-- Row 3 (Password but as TextField instead of PasswordField) -->
                    <Label text="DB Password:" GridPane.rowIndex="3"/>
                    <TextField fx:id="dbPasswordField" text="Yabuahmad_782003" GridPane.rowIndex="3"/>
                </children>
            </GridPane>

            <HBox spacing="15" alignment="CENTER">
                <Button text="Start Server" styleClass="green-btn" onAction="#onStartServer"/>
                <Button text="Stop Server" styleClass="red-btn" onAction="#onStopServer"/>
            </HBox>

            <Label text="Server Status:"/>
            <Label fx:id="serverStatusLabel" text="STOPPED"/>

            <Label text="Database Status:"/>
            <Label fx:id="dbStatusLabel" text="NOT CONNECTED"/>

        </VBox>
    </top>

    <center>
        <VBox spacing="10">
            <padding>
                <Insets top="10" right="10" bottom="10" left="10"/>
            </padding>

            <Label text="Connected Clients:"/>

           <TableView fx:id="clientTable" xmlns:fx="http://javafx.com/fxml/1">
                <columns>
                    <TableColumn fx:id="idColumn" text="ID"/>
                    <TableColumn fx:id="hostColumn" text="Host"/>
                    <TableColumn fx:id="ipColumn" text="IP"/>
                    <TableColumn fx:id="statusColumn" text="Status"/>
                </columns>
            </TableView>
        </VBox>
    </center>

</BorderPane>
