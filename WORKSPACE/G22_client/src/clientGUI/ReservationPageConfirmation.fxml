<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<BorderPane prefHeight="750.0" prefWidth="420.0"
            xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="clientGUI.ReservationConfirmationController">

    <!-- ===== CENTER CARD ===== -->
    <center>
        <StackPane style="-fx-background-color: rgba(0,0,0,0.35);">
            <VBox alignment="TOP_CENTER" spacing="18"
                  style="-fx-background-color: white; -fx-background-radius: 20; -fx-padding: 24;">

                <!-- TITLE -->
                <Label style="-fx-font-size: 22; -fx-font-weight: bold;" text="Confirmation " />

                <!-- STEPS BAR -->
                <HBox alignment="CENTER" spacing="16">
                    <VBox alignment="CENTER">
                        <Label style="-fx-text-fill: #c0c0c0;" text="●" />
                        <Label style="-fx-font-size: 11;" text="Identify" />
                    </VBox>

                    <Label style="-fx-text-fill: #c0c0c0;" text="━━" />

                    <VBox alignment="CENTER">
                        <Label style="-fx-text-fill: #2e7d32;" text="●" />
                        <Label style="-fx-font-size: 11;" text="Confirmation" />
                    </VBox>
                </HBox>

                <!-- TOGGLE MEMBER / GUEST -->
                <HBox alignment="CENTER" spacing="10" />

                <!-- ===== MEMBER AREA ===== -->
                <VBox fx:id="memberPane" fillWidth="true" spacing="10">
                    <HBox spacing="8" />
                </VBox>

                <!-- ===== GUEST AREA ===== -->
                <VBox fx:id="guestPane" fillWidth="true" managed="false" spacing="10" visible="false">
                    <Label text="Full name:" />
                    <TextField fx:id="fullNameField" promptText="Enter Full name" />

                    <Label text="Phone Number:" />
                    <TextField fx:id="phoneField" promptText="Enter mobile number" />

                    <Label text="Email (optional):" />
                    <TextField fx:id="emailField" promptText="Enter email" />
                </VBox>

                <Separator />

                <!-- DATE & TIME -->
                <VBox fillWidth="true" spacing="10">
                    <Label style="-fx-font-weight: bold;" text="Date and Time:" />
                    <Label fx:id="dateTimeLabel" wrapText="true" text="—" />
                </VBox>

                <!-- GUEST COUNT -->
                <VBox fillWidth="true" spacing="6">
                    <Label style="-fx-font-weight: bold;" text="Guests:" />
                    <Label fx:id="guestsLabel" text="—" />
                </VBox>

                <!-- CONFIRMATION CODE -->
                <VBox fillWidth="true" spacing="6">
                    <Label style="-fx-font-weight: bold;" text="Confirmation Code:" />
                    <Label fx:id="confirmationCodeLabel"
                           style="-fx-font-size: 20; -fx-font-weight: bold;"
                           text="—" />
                </VBox>

                <!-- MESSAGE -->
                <Label fx:id="messageLabel"
                       style="-fx-text-fill: #2e7d32; -fx-font-size: 12;"
                       wrapText="true"
                       text="" />

                <!-- STATUS MESSAGE -->
                <Label fx:id="statusLabel" maxWidth="340"
                       style="-fx-text-fill: #d32f2f; -fx-font-size: 11;"
                       text="" wrapText="true" />

            </VBox>
        </StackPane>
    </center>
</BorderPane>
