<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane prefHeight="650" prefWidth="520"
            style="-fx-background-color: #ffffff;"
            xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="clientGUI.RegisterSubscriberController">

    <!-- ===== TOP ===== -->
    <top>
        <HBox alignment="CENTER" style="-fx-padding: 30 20 10 20;">
            <Label text="Register Subscriber"
                   style="-fx-text-fill: #111111; -fx-font-size: 34px; -fx-font-family: 'Didot'; -fx-font-weight: bold;" />
        </HBox>
    </top>

    <!-- ===== FORM ===== -->
    <center>
        <VBox alignment="CENTER" spacing="16">
            <padding>
                <Insets top="20" right="20" bottom="20" left="20"/>
            </padding>

            <VBox spacing="6" maxWidth="360">
                <Label text="Full Name"
                       style="-fx-text-fill: #444444; -fx-font-size: 14px;" />
                <TextField fx:id="fullNameField"
                           promptText="e.g., Yamen Abu Ahmad"
                           style="-fx-background-radius: 12;
                                  -fx-background-color: #f6f6f6;
                                  -fx-text-fill: #111111;
                                  -fx-prompt-text-fill: #888888;
                                  -fx-font-size: 14px;
                                  -fx-border-color: #dddddd;
                                  -fx-border-radius: 12;" />
            </VBox>

            <VBox spacing="6" maxWidth="360">
                <Label text="Phone"
                       style="-fx-text-fill: #444444; -fx-font-size: 14px;" />
                <TextField fx:id="phoneField"
                           promptText="e.g., 05xxxxxxxx"
                           style="-fx-background-radius: 12;
                                  -fx-background-color: #f6f6f6;
                                  -fx-text-fill: #111111;
                                  -fx-prompt-text-fill: #888888;
                                  -fx-font-size: 14px;
                                  -fx-border-color: #dddddd;
                                  -fx-border-radius: 12;" />
            </VBox>

            <VBox spacing="6" maxWidth="360">
                <Label text="Email"
                       style="-fx-text-fill: #444444; -fx-font-size: 14px;" />
                <TextField fx:id="emailField"
                           promptText="e.g., name@gmail.com"
                           style="-fx-background-radius: 12;
                                  -fx-background-color: #f6f6f6;
                                  -fx-text-fill: #111111;
                                  -fx-prompt-text-fill: #888888;
                                  -fx-font-size: 14px;
                                  -fx-border-color: #dddddd;
                                  -fx-border-radius: 12;" />
            </VBox>

            <Label fx:id="messageLabel"
                   text=""
                   wrapText="true"
                   style="-fx-text-fill: #c0392b; -fx-font-size: 13px;" />

        </VBox>
    </center>

    <!-- ===== BUTTONS ===== -->
    <bottom>
        <VBox alignment="CENTER" spacing="12">
            <padding>
                <Insets top="0" right="0" bottom="25" left="0"/>
            </padding>

            <Button text="Register"
                    onAction="#onRegister"
                    prefWidth="320" prefHeight="52"
                    style="-fx-background-radius: 200;
                           -fx-background-color: #111111;
                           -fx-text-fill: white;
                           -fx-font-size: 18px;
                           -fx-font-weight: bold;" />

            <Button text="Back"
                    onAction="#onBack"
                    prefWidth="320" prefHeight="48"
                    style="-fx-background-radius: 200;
                           -fx-background-color: #f0f0f0;
                           -fx-text-fill: #111111;
                           -fx-font-size: 16px;
                           -fx-font-weight: bold;
                           -fx-border-color: #dddddd;
                           -fx-border-radius: 200;" />

        </VBox>
    </bottom>

</BorderPane>
