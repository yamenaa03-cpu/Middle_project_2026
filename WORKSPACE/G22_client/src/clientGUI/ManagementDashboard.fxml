<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<BorderPane stylesheets="@management.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="clientGUI.ManagementDashboardController">

    <!-- Top Bar -->
    <top>
        <HBox alignment="CENTER_LEFT" spacing="12" styleClass="topbar">
            <padding><Insets bottom="12" left="16" right="16" top="12" /></padding>

            <Label styleClass="title" text="Bistro Management" />

            <Region HBox.hgrow="ALWAYS" />

            <Label fx:id="lblRole" styleClass="pill" />
            <Button onAction="#onLogout" styleClass="btn-ghost" text="Logout" />
        </HBox>
    </top>

    <!-- Sidebar -->
    <left>
        <VBox spacing="10" styleClass="sidebar">
            <padding><Insets bottom="16" left="14" right="14" top="16" /></padding>

            <Label styleClass="sidebar-title" text="Navigation" />

            <Button onAction="#openRegisterSubscriber" styleClass="btn-nav" text="Register Subscriber" />
            <Button onAction="#openEmployeeDashboards" styleClass="btn-nav" text="Employee Dashboards" />
            <Button fx:id="Statbtn" onAction="#openStatistics" styleClass="btn-nav" text="Statistics" />

            <Separator />

            <Region VBox.vgrow="ALWAYS" />

            <Label styleClass="muted" />
        </VBox>
    </left>

    <!-- Content -->
    <center>
        <StackPane fx:id="contentPane" styleClass="content">
            <VBox maxWidth="520" spacing="10" styleClass="welcome">
                <Label styleClass="h1" text="Welcome ðŸ‘‹" />
                <Label styleClass="p" text="Use the navigation on the left to manage subscribers, employees, and reports." wrapText="true" />
                <HBox spacing="10" />
            </VBox>
        </StackPane>
    </center>

</BorderPane>
